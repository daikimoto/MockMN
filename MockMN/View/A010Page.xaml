<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MockMN.View.A010Page"
             xmlns:viewmodel="clr-namespace:MockMN.ViewModel">
    <ContentPage.BindingContext>
        <viewmodel:A010ViewModel />
    </ContentPage.BindingContext>

    <VerticalStackLayout>
        <CarouselView
            ItemsSource="{Binding Carousels}"
            Loop="False">
            <CarouselView.ItemTemplate>
                <DataTemplate>
                    <VerticalStackLayout>
                        <Frame>
                            <Image Source="{Binding ImageUrl}" />
                        </Frame>
                        <Label Text="{Binding ExplainText}" />
                    </VerticalStackLayout>

                </DataTemplate>

            </CarouselView.ItemTemplate>

        </CarouselView>

    </VerticalStackLayout>

</ContentPage>

